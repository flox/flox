ifndef _MK_CONFIG

_MK_CONFIG = 1

# ---------------------------------------------------------------------------- #

UNAME   ?= uname


# ---------------------------------------------------------------------------- #

OS ?= $(shell $(UNAME))
OS := $(OS)


# ---------------------------------------------------------------------------- #

ifndef libExt
	ifeq (Linux,$(OS))
		libExt ?= .so
	else
		libExt ?= .dylib
	endif  # ifeq (Linux,$(OS))
endif  # ifndef libExt


# ---------------------------------------------------------------------------- #

endif  # ifndef _MK_CONFIG


