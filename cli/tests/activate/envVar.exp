# Activate a project environment using --dir and check an environment variable
# is set.

set dir [lindex $argv 0]
set flox $env(FLOX_BIN)

spawn $flox activate --dir $dir
expect_after {
  timeout { exit 1 }
  eof { exit 2 }
  "*\n" { exp_continue }
  "*\r" { exp_continue }
}
expect -re "flox .*\\\[project-\\d+\\\]" {}

# check for alias
send "echo \$foo\n"

send "exit\n"
expect eof
