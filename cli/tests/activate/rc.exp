# Activate a project environment using --dir and check an alias is loaded from
# ~/.bashrc

set dir [lindex $argv 0]
set flox $env(FLOX_BIN)

set timeout 300
expect_before {
  timeout { exit 1 }
  eof { exit 2 }
  "*\n" { exp_continue }
}

spawn $flox activate --dir $dir
expect -ex "Building environment..."
send "type test_alias\r"
send "exit\r"
expect eof
