set dir [lindex $argv 0]
set flox $env(FLOX_BIN)
set env(NO_COLOR) 1

set timeout 300
spawn $flox activate --dir $dir
expect_after {
  timeout { exit 1 }
  eof { exit 2 }
  "*\n" { exp_continue }
  "*\r" { exp_continue }
}

expect -re "flox .*\\\[project-\\d+\\\]" {}
send "echo HISTFILE=\$HISTFILE\r"
send "echo SHELL_SESSION_DIR=\$SHELL_SESSION_DIR\r"
send "exit\r"
expect eof
