# Activate a project environment using --dir and return immediately.
# Used to test side-effects of hook and profile scripts.

set dir [lindex $argv 0]
set flox $env(FLOX_BIN)
set timeout 10
spawn $flox activate --dir $dir
expect_after {
  timeout { exit 1 }
  eof { exit 2 }
  "*\n" { exp_continue }
  "*\r" { exp_continue }
}

send "exit\n"
expect eof
