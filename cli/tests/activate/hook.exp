# Activate a project environment using --dir and check the environment's hook is
# run.

set dir [lindex $argv 0]
set flox $env(FLOX_BIN)
set timeout 10
expect_before {
  timeout { exit 1 }
  eof { exit 2 }
  "*\n" { exp_continue }
}

spawn $flox activate --dir $dir
expect -ex "Building environment..."
send "exit\n"
expect eof
